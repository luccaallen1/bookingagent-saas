// Helpers to craft drafts from a topic
function craftEmailDraft(t: { topic: string; audience: string }) {
  const noun = t.topic.toLowerCase();
  const seg = t.audience === "Warm Leads" ? "warm" : "all";
  return {
    name: `${t.topic} â€“ Education`,
    type: "email",
    segment: seg,
    subject: `${t.topic}? Here's how chiropractic care can help`,
    content:
      `Hi {{first_name}},\n\nWe noticed many people in our community asked about ${noun}. Here's a quick guide from our clinicians:\n\nâ€¢ Common causes of ${noun}\nâ€¢ When to see a chiropractor\nâ€¢ What to expect during your visit\nâ€¢ Simple atâ€‘home care tips\n\nIf you're dealing with ${noun}, we'd love to help. Book a consult here: {{booking_link}}\n\nâ€” {{business_name}}\n{{business_phone}}`,
  };
}

